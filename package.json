{
  "name": "shortlink-api",
  "description": "ShortLink is a URL shortening api that encodes a long URL and decodes the short URL",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "prepare": "husky install",
    "prettify": "prettier --ignore-path .gitignore --config .prettierrc \"src/**/*.ts\" --write",
    "prettify:check": "prettier --check \"**/*.ts\"",
    "lint:check": "eslint --ignore-path .eslintignore \"src/**/*.ts\"",
    "lint:fix": "eslint --ignore-path .eslintignore \"src/**/*.ts\" --fix",
    "dev": "ts-node-dev ./src/index.ts",
    "prebuild": "rm -rf build",
    "build": "npx tsc",
    "precommit": "npm run lint:fix && npm run prettify",
    "prepush": "npm run lint:check",
    "prod": "npm run prebuild && npm run build && node build/index.js",
    "test": "jest --runInBand --forceExit"
  },
  "keywords": [
    "short link",
    "url shortener"
  ],
  "author": "Olusegun Ekoh",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.0.2",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/compression": "^1.7.3",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.5",
    "@types/morgan": "^1.9.6",
    "@types/node": "^20.7.1",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "eslint-config-standard-with-typescript": "^39.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
