{
  "name": "shortlink-api",
  "description": "ShortLink is a URL shortening api that encodes a long URL and decodes the short URL",
  "version": "1.0.0",
  "main": "index.ts",
  "_moduleAliases": {
    "@root": ".",
    "@exceptions": "build/exceptions",
    "@controllers": "build/controllers",
    "@interfaces": "build/interfaces",
    "@middlewares": "build/middlewares",
    "@routes": "build/routes",
    "@services": "build/services",
    "@helpers": "build/helpers",
    "@config": "build/config"
  },
  "scripts": {
    "prepare": "husky install",
    "prettify": "prettier --ignore-path .gitignore --config .prettierrc \"src/**/*.ts\" --write",
    "prettify:check": "prettier --check \"**/*.ts\"",
    "lint:check": "eslint --ignore-path .eslintignore \"src/**/*.ts\"",
    "lint:fix": "eslint --ignore-path .eslintignore \"src/**/*.ts\" --fix",
    "prebuild": "rm -rf build",
    "build": "npx tsc",
    "dev": "cross-env NODE_ENV=development ts-node-dev ./src/index.ts",
    "start:prod": "node build/src/index.js",
    "prod": "cross-env NODE_ENV=production npm-run-all --sequential prebuild build start:prod",
    "test": "cross-env NODE_ENV=test jest --forceExit --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test jest --runInBand --watch",
    "precommit": "npm-run-all --sequential lint:fix prettify test",
    "prepush": "npm run lint:check"
  },
  "keywords": [
    "short link",
    "url shortener",
    "encode",
    "decode"
  ],
  "author": "Olusegun Ekoh",
  "license": "ISC",
  "dependencies": {
    "@types/ua-parser-js": "^0.7.37",
    "@types/uuid": "^9.0.4",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.0.2",
    "helmet": "^7.0.0",
    "http-status": "^1.7.0",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "nanoid": "^3.3.6",
    "swagger-ui-express": "^5.0.0",
    "ua-parser-js": "^1.0.36",
    "uuid": "^9.0.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/compression": "^1.7.3",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.5",
    "@types/module-alias": "^2.0.2",
    "@types/morgan": "^1.9.6",
    "@types/node": "^20.7.1",
    "@types/supertest": "^2.0.13",
    "@types/swagger-ui-express": "^4.1.4",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "eslint-config-standard-with-typescript": "^39.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">= 16.0.0"
  }
}
